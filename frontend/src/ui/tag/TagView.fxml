<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import ui.util.icon.Icon?>
<fx:root type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="ui.tag.TagView"
         stylesheets="TagView.css"
         onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit" >

    <Label fx:id="tagName" />

    <Button fx:id="removeTagBtn" visible="false" onAction="#onRemoveButton_click">
        <graphic>
            <Icon icon="trashcan.svg" />
        </graphic>
    </Button>

</fx:root>
