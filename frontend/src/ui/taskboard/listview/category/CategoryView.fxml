<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<?import ui.custom.icon.Icon?>

<?import javafx.scene.control.Button?>

<?import ui.taskboard.listview.ListView?>
<fx:root type="javafx.scene.layout.GridPane"
         stylesheets="@CategoryView.css"
         styleClass="topBorder, catContainer"
         xmlns="http://javafx.com/javafx/15.0.1"
         xmlns:fx="http://javafx.com/fxml/1">

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" prefWidth="40.0" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
    </rowConstraints>

    <!-- Drop down icon (row 0, col 0) -->
    <HBox alignment="CENTER" >
        <Button fx:id="toggleBtn" onAction="#toggleBtnHandler"
                style="-fx-border-color: transparent; -fx-background-color: transparent;" >
            <graphic>
                <Icon icon="angle-down.svg" iconColor="#cccccc" iconSize="7" />
            </graphic>
        </Button>
    </HBox>

    <!-- Category title (row 0, col 1) -->
    <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
        <Label fx:id="categoryName" text="Category Name Placeholder"/>
    </HBox>

    <!-- Category buttons (row 0, col 2) -->
    <HBox fx:id="buttonContainer" alignment="CENTER_RIGHT" GridPane.columnIndex="2">
        <Button fx:id="removeVertexBtn"
                onAction="#onRemoveVertexBtn_click"
                styleClass="removeCatBtn" text="V">
            <HBox.margin><Insets right="5"/></HBox.margin>
        </Button>
        <Button fx:id="removeGraphBtn"
                onAction="#onRemoveGraphBtn_click"
                styleClass="removeCatBtn" text="G">
            <HBox.margin><Insets right="5"/></HBox.margin>
        </Button>
        <Icon icon="bookmark.svg" iconColor="#cccccc" iconSize="10"><HBox.margin><Insets right="5"/></HBox.margin></Icon>
        <Icon icon="archive.svg" iconColor="#cccccc" iconSize="10"/>
    </HBox>

    <!-- Status of category (row 1, col 1) -->
    <HBox GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <Label fx:id="tasksRemainingLabel" text="num tasks remaining placeholder"/>
    </HBox>

    <ListView fx:id="listView"
              GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2"/>

</fx:root>
