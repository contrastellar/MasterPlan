<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import ui.taskboard.listview.ListViewHeader?>

<?import ui.taskboard.listview.ListView?>
<?import javafx.scene.control.ScrollPane?>

<fx:root type="javafx.scene.layout.VBox" stylesheets="@ListSpaceView.css"
         xmlns="http://javafx.com/javafx/15.0.1"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:id="listContainer">

      <!-- Runtime: listview header  -->
      <ListViewHeader fx:id="listViewHeader" />

      <!-- Runtime: category view | ID is for scroll event handler  -->
      <ScrollPane fx:id="scrollPane">
            <ListView fx:id="listView" />
      </ScrollPane>

</fx:root>
