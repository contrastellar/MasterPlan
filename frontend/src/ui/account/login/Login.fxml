<!--View -->
<Scene stylesheets="@Login.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.LoginController">
    <AnchorPane prefHeight="347.0" prefWidth="478.0">
        <Label alignment="CENTER" layoutX="158.0" layoutY="14.0" prefHeight="74.0" prefWidth="165.0" text="MasterPlan Login">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <GridPane layoutX="67.0" layoutY="88.0" prefHeight="124.0" prefWidth="346.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="107.0" minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="121.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="137.0" minHeight="0.0" prefHeight="48.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="137.0" minHeight="10.0" prefHeight="45.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <TextField prefHeight="25.0" prefWidth="174.0" promptText="Username" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
            <Label text="Username:" GridPane.halignment="CENTER" />
            <Label alignment="CENTER" text="Password:" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <PasswordField promptText="Password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#handleSubmitButtonAction" text="Login!" GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="loginButton"/>
            <CheckBox mnemonicParsing="false" text="Remember Me" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        </GridPane>
        <!-- Test Text for Logging someone in -->
        <Text fx:id="actionTarget" layoutX="226.0" layoutY="262.0" textAlignment="CENTER" />
    </AnchorPane>
</Scene>
